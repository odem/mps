#!/bin/bash
#
# apt
alias pq='apt search'
alias pi='sudo apt install'
alias pd='sudo apt remove'
alias puu='sudo apt update && sudo apt upgrade'
alias cmmi='./configure && make && sudo make install'

# ls
alias ll='ls -lah --color=auto'
alias la='ls -A --color=auto'
alias l='ls -CF --color=auto'
alias sll='sudo ls -la'

# exa
alias e='exa'
alias et='exa --long --tree'
alias ee='exa -abghHlS'
alias eet='exa --long --tree -abghHlS'
alias see='sudo exa -abghHlS'
alias stree='sudo exa --long --tree'

# custom scripts
alias rfs='~/mps/snippets/rfs.bash'
alias vff='nvim $(~/mps/snippets/fuzzy-find.bash)'
alias ela='~/mps/snippets/elapsed.bash'
alias cheat='~/mps/snippets/chtsht.bash'

# cat
alias bcat='batcat'
alias scat='sudo cat'
alias sbcat='sudo batcat'

# cp
alias rp='rsync -arvP --info=progress2'

# git
alias gs='git status'
alias gl='git log --pretty=oneline'
alias gll='git log'
alias gd='git diff'
alias ga='git add'
alias gaa='git add -A'
alias gc='git commit -m'
alias gpull='git pull'
alias gpush='git push'
# Docker
alias dps="docker ps -a"
alias dcexec="docker exec -ti "
alias dcstop="docker container stop "
alias dcrm="docker container rm"
alias dnls="docker network ls"
alias dirm="docker image rm"
alias dia="docker images -a"
# network
alias ns='sudo netstat -tulpn |sort -k 4 -n'
alias nso='sudo netstat -tulpano |sort -k 4 -n'
# nvim
alias v='nvim'
alias sv='sudo nvim'
# mps
alias mps="cd ~/mps"
alias disks="cd ~/mps/disks"
alias docs="cd ~/mps/docs"
alias iso="cd ~/mps/iso"
alias repo="cd ~/mps/repo"
alias scratch="cd ~/mps/scratch"
alias secrets="cd ~/mps/secrets"
alias snippets="cd ~/mps/snippets"
alias tools="cd ~/mps/tools"
alias venv="cd ~/mps/venv"
alias vm="cd ~/mps/vm"
alias wsp="cd ~/mps/wsp"
# More fancy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# Quick vm script
alias qvm_install="quickvm.bash -a install"
alias qvm_clone="quickvm.bash -a clone"
alias qvm_delete="quickvm.bash -a delete"
alias qvm_start="quickvm.bash -a start"
alias qvm_stop="quickvm.bash -a stop"
alias qvm_list="quickvm.bash -a list"
alias qvm_ssh="quickvm.bash -a ssh"

# tmux
alias tls="tmux ls"
alias tas="tmux attach -t "
alias tns="tmux new -s "
alias tks="tmux kill-session -t "

# Custom config aliases
alias cfg-qtile="nvim ~/.config/qtile/config.py"
alias cfg-nvim="nvim ~/.config/nvim/init.lua"
alias cfg-tmux="nvim ~/.config/tmux/tmux.conf.local"
alias cfg-ssh="nvim ~/.ssh/config"
alias cfg-autostart="nvim \$(which autostart.sh)"
alias cfg-backup="nvim \$(which backup.bash)"
alias cfg-bashrc="nvim ~/.bashrc && source ~/.bashrc"
alias cfg-alias="nvim ~/.bashrc_alias && source ~/.bashrc_alias"

# Custom folders aliases
alias backend="cd ~/mps/repo/github/nuromedia/design-daas/backend"
alias mpsrepo="cd ~/mps/repo/github/odem/mps"
alias nuro="cd ~/mps/repo/github/nuromedia/design-daas"
alias nuroenv="cd ~/mps/repo/github/nuromedia/design-daas/backend/installer/iso"
alias nuroenvstart="cd ~/mps/repo/github/nuromedia/design-daas/backend/installer/iso && make ISOTYPE=devenv EXTRAPORTS=1 start"
alias nuroenvstop="cd ~/mps/repo/github/nuromedia/design-daas/backend/installer/iso && make ISOTYPE=devenv stop"
alias nuroenvssh="cd ~/mps/repo/github/nuromedia/design-daas/backend/installer/iso && tmux new-session -s devenv 'bash -c \"ssh pve\"'"

