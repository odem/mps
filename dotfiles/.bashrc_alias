#!/bin/bash
#
# apt
alias pq='apt search'
alias pi='sudo apt install'
alias pd='sudo apt remove'
alias puu='sudo apt update && sudo apt upgrade'
alias cmmi='./configure && make && sudo make install'

# ls
alias ll='ls -lah --color=auto'
alias la='ls -A --color=auto'
alias l='ls -CF --color=auto'
alias e='exa'
alias et='exa --long --tree'
alias ee='exa -abghHlS'
alias eet='exa --long --tree -abghHlS'

# custom scripts
alias rfs='~/mps/snippets/rfs.bash'
alias ela='~/mps/snippets/elapsed.bash'
alias cheat='~/mps/snippets/chtsht.bash'
alias vff='nvim $(~/mps/snippets/fuzzy-find.bash)'

# cat
alias bcat='batcat'

# git
alias gs='git status'
alias gl='git log --pretty=oneline'
alias gll='git log'
alias gd='git diff master'
alias ga='git add'
alias gaa='git add -A'
alias gac='git add -A ; git commit -m '
alias gc='git commit -m'
alias gpull='git pull'
alias gpush='git push'
# Docker
alias dps="docker ps -a"
alias drm="docker container rm"
alias dia="docker images -a"
# network
alias ns='sudo netstat -tulpano'
alias v='nvim'
# mps
alias repo="cd ~/mps/repo"
alias disks="cd ~/mps/disks"
alias docs="cd ~/mps/docs"
alias scratch="cd ~/mps/scratch"
alias snippets="cd ~/mps/snippets"
alias vm="cd ~/mps/vm"
alias wsp="cd ~/mps/wsp"
# More fancy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

alias nuro="cd ~/mps/repo/github/nuromedia/design-daas"
alias backend="cd ~/mps/repo/github/nuromedia/design-daas/backend"
alias design="cd ~/mps/repo/gitlab/design"

